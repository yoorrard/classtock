rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Notice attachments
    match /notices/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@classstock.com';
    }

    // Popup notice attachments
    match /popups/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@classstock.com';
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
