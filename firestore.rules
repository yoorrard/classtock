rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (checks admins collection)
    function isAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    // Helper function to check if user owns the resource
    function isOwner(email) {
      return isAuthenticated() && request.auth.token.email == email;
    }

    // Admins collection (only existing admins can manage)
    match /admins/{email} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Teachers collection
    match /teachers/{teacherId} {
      allow read: if isAuthenticated() && (request.auth.uid == teacherId || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == teacherId;
      allow update, delete: if isAuthenticated() && request.auth.uid == teacherId;
    }

    // Classes collection
    match /classes/{classId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.teacherEmail == request.auth.token.email;
      allow update, delete: if isAuthenticated() && resource.data.teacherEmail == request.auth.token.email;
    }

    // Students collection
    match /students/{studentId} {
      allow read: if true; // Students can read their own data via class code lookup
      allow create, update, delete: if isAuthenticated(); // Teachers manage students
    }

    // Transactions collection
    match /transactions/{transactionId} {
      allow read: if true; // Accessible for ranking/portfolio views
      allow create, update, delete: if isAuthenticated();
    }

    // Notices collection (public read, admin write)
    match /notices/{noticeId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Q&A Posts collection
    match /qnaPosts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (resource.data.authorEmail == request.auth.token.email || isAdmin());
      allow delete: if isAdmin();
    }

    // Popup Notices collection
    match /popupNotices/{noticeId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
